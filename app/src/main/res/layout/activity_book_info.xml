<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="40dp"
        android:text="Book Info"
        android:layout_marginTop="12dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <EditText
        android:id="@+id/etBookTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorAccent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edittext_login_form"/>


    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="Author"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:width="100dp"
                android:textSize="20sp"
                android:layout_width="50sp"
                android:layout_height="50sp" />
            <EditText
                android:id="@+id/etBookAuthor"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorAccent"
                android:background="@drawable/edittext_login_form"/>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="Conditions"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:width="100dp"
                android:textSize="20sp"
                android:layout_width="50sp"
                android:layout_height="50sp" />
            <EditText
                android:id="@+id/etConditions"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorAccent"
                android:background="@drawable/edittext_login_form"/>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="For"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_width="50sp"
                android:layout_height="50sp" />

            <EditText
                android:id="@+id/etFor"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorAccent"
                android:background="@drawable/edittext_login_form"/>

        </TableRow>
    </TableLayout>
    <Button
        android:id="@+id/bContact"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:textColor="@color/white"
        android:background="@drawable/button_login_form"
        android:text="Contact User"/>
</LinearLayout>